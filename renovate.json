{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "archived/**"
  ],
  "packageRules": [
    {
      "matchFileNames": ["charts/**"],
      "commitMessageTopic": "{{parentDir}} - {{depName}}",
      "bumpVersions": [
        {
          "filePatterns": ["{{packageFileDir}}/Chart.{yaml,yml}"],
          "matchStrings": [
            "appVersion: '(?<currentValue>.*?)'\\s+",
            "version:\\s(?<version>[^\\s]+)"
            ],
          "bumpType": "{{#if isPatch}}patch{{else}}minor{{/if}}",
        }
      ]
    },
    {
      "matchPackageNames": "docker.io/kimai/kimai2",
      "versioning": "regex:apache-(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?$"
    }
  ]
}
