{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "customManagers:helmChartYamlAppVersions"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "archived/**"
  ],
  "packageRules": [
    {
      "description": "Treat every chart as separate group with separate scope and branch prefix",
      "matchFileNames": [
        "charts/*/*"
      ],
      "additionalBranchPrefix": "{{parentDir}}-",
      "semanticCommitScope": "{{parentDir}}"
    },
    {
      "matchPackageNames": "docker.io/kimai/kimai2",
      "versioning": "regex:apache-(?<major>\\d+)(\\.(?<minor>\\d+))?(\\.(?<patch>\\d+))?$"
    },
        {
      "description": "Disable digest pinning for regex managers in Chart.yaml used for appVersion upgrading",
      "matchManagers": [
        "custom.regex"
      ],
      "matchFileNames": [
        "charts/*/Chart.yaml"
      ],
      "pinDigests": false
    }
  ]
}
